// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int       @id @default(autoincrement())
  username         String?
  password         String
  fullName         String?
  email            String    @unique
  roles            Roles
  refreshToken     String?
  managerId        Int?
  projectsAssigned String[]
  projects         Project[]
  reporterDev      Ticket[]  @relation("assigneeDeveloper")
  assignedDev      Ticket[]  @relation("reportingDeveloper")

  Ticket Ticket[]
}

enum Roles {
  EMPLOYEE
  MANAGER
  ADMIN
}

model Project {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  tickets     Ticket[]
  User        User?    @relation(fields: [managerId], references: [id])
  managerId   Int?
}

model Ticket {
  id                 Int     @id @default(autoincrement())
  title              String
  priority           String
  project            Project @relation(fields: [projectId], references: [id])
  projectId          Int
  description        String
  status             String
  assigneeDeveloper  User    @relation("assigneeDeveloper", fields: [assignee], references: [id])
  assignee           Int
  reportingDeveloper User    @relation("reportingDeveloper", fields: [reporter], references: [id])
  reporter           Int
  issueType          String
  User               User?   @relation(fields: [userId], references: [id])
  userId             Int?
}
